<%- include('../../partials/header.ejs') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Daftar Rusak / Hilang</h2>
        <% if (user && (user.status==='Admin' || (user.role && user.role.toLowerCase()==='admin' ))) { %>
            <div>
                <a href="/rusak-hilang/create" class="btn btn-primary">Tambah</a>
            </div>
            <% } %>
    </div>

    <% if (typeof error !=='undefined' && error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
        <% } %>
            <% if (typeof success !=='undefined' && success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <% } %>

                    <form class="mb-3" method="get" action="/rusak-hilang/list">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control"
                                placeholder="Cari nama barang, ID rusak/hilang atau id_detail..."
                                value="<%= filter_q || '' %>">
                            <button class="btn btn-outline-secondary" type="submit">Cari</button>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nama Barang</th>
                                    <th>Jumlah Rusak</th>
                                    <th>Jumlah Hilang</th>
                                    <th>Biaya Denda / Item</th>
                                    <th>Subtotal Denda</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (records && records.length) { %>
                                    <% records.forEach(function(r) { %>
                                        <tr>
                                            <td>
                                                <%= r.id_rusak_hilang %>
                                            </td>
                                            <td>
                                                <%= r.nama_barang || '-' %>
                                            </td>

                                            <td>
                                                <%= r.jumlah_rusak || 0 %>
                                            </td>
                                            <td>
                                                <%= r.jumlah_hilang || 0 %>
                                            </td>
                                            <td>Rp <%= (r.biaya_denda_per_item || 0).toLocaleString('id-ID') %>
                                            </td>
                                            <td>Rp <%= (r.subtotal_denda || 0).toLocaleString('id-ID') %>
                                            </td>

                                            <td>
                                                <a href="/rusak-hilang/detail/<%= r.id_rusak_hilang %>"
                                                    class="btn btn-sm btn-info">Detail</a>

                                                <% if (user && (user.status==='Admin' || (user.role &&
                                                    user.role.toLowerCase()==='admin' ))) { %>
                                                    <a href="/rusak-hilang/edit/<%= r.id_rusak_hilang %>"
                                                        class="btn btn-sm btn-warning">Edit</a>

                                                    <form action="/rusak-hilang/delete/<%= r.id_rusak_hilang %>"
                                                        method="post" style="display:inline;"
                                                        onsubmit="return confirm('Yakin ingin menghapus data ini?');">
                                                        <button class="btn btn-sm btn-danger">Hapus</button>
                                                    </form>
                                                    <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="text-center">Tidak ada data</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <%- include('../../partials/footer.ejs') %>