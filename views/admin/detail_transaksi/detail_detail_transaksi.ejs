<%- include('../../partials/header.ejs') %>
    <div class="container mt-4">
        <h2>Detail #<%= detail.id_detail %>
        </h2>

        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID Transaksi</dt>
                    <dd class="col-sm-9">
                        <%= detail.id_transaksi %>
                    </dd>

                    <dt class="col-sm-3">ID Barang</dt>
                    <dd class="col-sm-9">
                        <%= detail.id_barang %>
                    </dd>

                    <dt class="col-sm-3">Jumlah Sewa</dt>
                    <dd class="col-sm-9">
                        <%= detail.jumlah_sewa %>
                    </dd>

                    <dt class="col-sm-3">Qty Kembali Bagus</dt>
                    <dd class="col-sm-9">
                        <%= detail.qty_kembali_bagus || 0 %>
                    </dd>

                    <dt class="col-sm-3">Harga Sewa / Satuan</dt>
                    <dd class="col-sm-9">Rp <%= (detail.harga_sewa_per_satuan || 0).toLocaleString() %>
                    </dd>

                    <dt class="col-sm-3">Total Harga</dt>
                    <dd class="col-sm-9">Rp <%= (detail.total_harga_sewa || 0).toLocaleString() %>
                    </dd>
                </dl>

                <a href="/detail-transaksi/edit/<%= detail.id_detail %>" class="btn btn-warning">Edit</a>
                <form action="/detail-transaksi/delete/<%= detail.id_detail %>" method="post" style="display:inline"
                    onsubmit="return confirm('Hapus detail ini?');">
                    <button class="btn btn-danger">Hapus</button>
                </form>
                <a href="/detail-transaksi/list-detail" class="btn btn-secondary">Kembali</a>
            </div>
        </div>
    </div>
    <%- include('../../partials/footer.ejs') %>