<%- include('../../partials/header.ejs', { title: 'Detail Peminjam' , currentPath: '/peminjam/list-peminjam' , user:
    user }) %>

    <div class="main-content-wrapper">
        <div class="container">
            <div class="detail-card shadow-sm">
                <div class="detail-header">
                    <div class="header-content">
                        <a href="/peminjam/list-peminjam" class="btn-back" title="Kembali">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <div class="title-group">
                            <h2 class="m-0">Profil Peminjam</h2>
                            <p class="text-muted m-0">ID: <%= peminjam.username %>
                            </p>
                        </div>
                    </div>
                    <div class="badge-status <%= peminjam.status === 'aktif' ? 'status-aktif' : 'status-nonaktif' %>">
                        <%= (peminjam.status || 'OFFLINE' ).toUpperCase() %>
                    </div>
                </div>

                <div class="detail-body">
                    <% if (typeof error !=='undefined' && error) { %>
                        <div class="alert alert-danger border-0 shadow-sm mb-4" style="border-radius:12px;">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <%= error %>
                        </div>
                        <% } %>

                            <div class="row g-4">
                                <div class="col-md-4 border-end-md">
                                    <div class="text-center">
                                        <div class="avatar-large mx-auto mb-3">
                                            <%= peminjam.nama_lengkap ? peminjam.nama_lengkap.charAt(0).toUpperCase()
                                                : 'U' %>
                                        </div>
                                        <h4 class="fw-bold mb-1 text-dark">
                                            <%= peminjam.nama_lengkap || 'Tanpa Nama' %>
                                        </h4>
                                        <p class="text-primary fw-medium mb-4">@<%= peminjam.username %>
                                        </p>

                                        <div class="stats-box">
                                            <div class="small text-muted mb-2">Terdaftar Sejak</div>
                                            <div class="fw-bold text-dark">
                                                <i class="bi bi-calendar-check me-2 text-primary"></i>
                                                <%= peminjam.tgl_daftar || '-' %>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-8 ps-md-5">
                                    <h5 class="section-title mb-4 mt-md-0 mt-5">
                                        <i class="bi bi-person-vcard me-2"></i>Informasi Lengkap
                                    </h5>

                                    <div class="info-grid">
                                        <div class="info-item mb-4">
                                            <label class="info-label">Nama Lengkap</label>
                                            <div class="info-value">
                                                <%= peminjam.nama_lengkap || '-' %>
                                            </div>
                                        </div>

                                        <div class="info-item mb-4">
                                            <label class="info-label">No. Telepon</label>
                                            <div class="info-value">
                                                <span class="text-success"><i class="bi bi-whatsapp me-2"></i></span>
                                                <%= peminjam.no_telpon || '-' %>
                                            </div>
                                        </div>

                                        <div class="info-item mb-4">
                                            <label class="info-label">Alamat</label>
                                            <div class="info-value">
                                                <i class="bi bi-geo-alt me-2 text-danger"></i>
                                                <%= peminjam.alamat || '-' %>
                                            </div>
                                        </div>

                                        <div class="info-item mb-4">
                                            <label class="info-label">Status Keanggotaan</label>
                                            <div class="info-value d-flex align-items-center">
                                                <span
                                                    class="dot <%= peminjam.status === 'aktif' ? 'dot-success' : 'dot-secondary' %>"></span>
                                                <%= peminjam.status ? peminjam.status.charAt(0).toUpperCase() +
                                                    peminjam.status.slice(1) : '-' %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="action-footer">
                                        <a href="/peminjam/edit/<%= encodeURIComponent(peminjam.username) %>"
                                            class="btn btn-edit-lg">
                                            <i class="bi bi-pencil-square me-2"></i> Edit Profil
                                        </a>

                                        <form method="POST"
                                            action="/peminjam/delete/<%= encodeURIComponent(peminjam.username) %>"
                                            class="d-inline w-100-mobile"
                                            onsubmit="return confirm('Yakin ingin menghapus peminjam ini?')">
                                            <button type="submit" class="btn btn-delete-lg">
                                                <i class="bi bi-trash me-2"></i> Hapus
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .main-content-wrapper {
            padding: 60px 15px;
            background-color: #f8fafc;
            min-height: 100vh;
        }

        .detail-card {
            background: white;
            max-width: 950px;
            margin: 0 auto;
            border-radius: 24px;
            overflow: hidden;
            border: 1px solid #eef2f6;
        }

        /* Header Styling */
        .detail-header {
            padding: 30px;
            background: #ffffff;
            border-bottom: 1px solid #f1f5f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-content {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .btn-back {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            background: #f1f5f9;
            color: #475569;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: 0.3s;
        }

        .btn-back:hover {
            background: #e2e8f0;
            color: #1e293b;
            transform: translateX(-3px);
        }

        /* Profile Section */
        .avatar-large {
            width: 110px;
            height: 110px;
            background: #e0e7ff;
            color: #4f46e5;
            border-radius: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.8rem;
            font-weight: 800;
            box-shadow: 0 8px 16px rgba(79, 70, 229, 0.1);
        }

        .stats-box {
            background: #f8fafc;
            padding: 20px;
            border-radius: 20px;
            border: 1px solid #f1f5f9;
            margin-bottom: 10px;
        }

        /* Info Section - Jarak diperbaiki */
        .detail-body {
            padding: 40px;
        }

        .section-title {
            font-weight: 700;
            color: #1e293b;
            border-bottom: 2px solid #f8fafc;
            padding-bottom: 15px;
            letter-spacing: 1px;
        }

        .info-label {
            font-size: 0.75rem;
            color: #94a3b8;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 6px;
            display: block;
        }

        .info-value {
            font-size: 1.1rem;
            color: #1e293b;
            font-weight: 500;
        }

        /* Badges */
        .badge-status {
            padding: 8px 18px;
            border-radius: 12px;
            font-weight: 800;
            font-size: 0.7rem;
            letter-spacing: 1px;
        }

        .status-aktif {
            background: #dcfce7;
            color: #15803d;
            border: 1px solid #bbf7d0;
        }

        .status-nonaktif {
            background: #f1f5f9;
            color: #475569;
            border: 1px solid #e2e8f0;
        }

        .dot {
            height: 12px;
            width: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 10px;
        }

        .dot-success {
            background-color: #22c55e;
            box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.1);
        }

        .dot-secondary {
            background-color: #94a3b8;
        }

        /* Buttons */
        .action-footer {
            display: flex;
            gap: 15px;
            margin-top: 40px;
        }

        .btn-edit-lg {
            background: #4f46e5;
            color: white;
            border-radius: 14px;
            padding: 14px 30px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.3s;
            flex: 1;
            text-align: center;
            border: none;
        }

        .btn-edit-lg:hover {
            background: #4338ca;
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.2);
            color: white;
            transform: translateY(-2px);
        }

        .btn-delete-lg {
            background: #ffffff;
            color: #dc2626;
            border-radius: 14px;
            padding: 14px 30px;
            font-weight: 600;
            border: 1.5px solid #fee2e2;
            transition: 0.3s;
            flex: 1;
            width: 100%;
        }

        .btn-delete-lg:hover {
            background: #dc2626;
            color: white;
            box-shadow: 0 10px 20px rgba(220, 38, 38, 0.15);
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .container {
                padding: 20px 15px;
            }

            .detail-body {
                padding: 30px 20px;
            }

            .border-end-md {
                border-right: none !important;
                border-bottom: 2px solid #f1f5f9;
                padding-bottom: 40px;
            }

            .action-footer {
                flex-direction: column;
                gap: 12px;
            }

            .btn-edit-lg,
            .btn-delete-lg {
                width: 100%;
                flex: none;
            }

            .section-title {
                margin-top: 40px;
            }
        }
    </style>

    <%- include('../../partials/footer.ejs') %>