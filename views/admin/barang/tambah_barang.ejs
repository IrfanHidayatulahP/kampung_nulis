<!-- views/admin/barang/tambah_barang.ejs -->
<%- include('../../partials/header.ejs') %>
    <div class="container mt-4">
        <h2>Tambah Barang</h2>

        <% if (typeof error !=='undefined' && error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                    <% } %>

                        <!-- action diperbaiki ke /barang/create -->
                        <form method="post" action="/barang/create">
                            <div class="mb-3">
                                <label class="form-label">Nama Barang</label>
                                <input type="text" name="nama_barang" class="form-control" required>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Jumlah Total</label>
                                    <input type="number" name="jumlah_total" class="form-control" min="0" value="0"
                                        required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Stok Tersedia</label>
                                    <input type="number" name="stok_tersedia" class="form-control" min="0" value="0"
                                        required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Satuan</label>
                                    <input type="text" name="satuan_jumlah" class="form-control"
                                        placeholder="pcs / box / kg">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Harga Dasar Sewa (Rp)</label>
                                <input type="number" name="harga_dasar_sewa" class="form-control" min="0" value="0"
                                    required>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success">Simpan</button>
                                <!-- link cancel diperbaiki ke /barang/list-barang -->
                                <a href="/barang/list-barang" class="btn btn-secondary">Batal</a>
                            </div>
                        </form>
    </div>
    <%- include('../../partials/footer.ejs') %>