<%- include('../../partials/header.ejs') %>
    <% const rawRole=(typeof user !=='undefined' && (user.role || user.status)) || '' ; const
        roleNorm=String(rawRole).toLowerCase().replace(/\s+/g,'').replace(/[_-]/g,''); const isAdmin=roleNorm==='admin'
        ; %>

        <div class="container mt-4">
            <h2>Tambah Barang</h2>

            <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                    <% if (typeof success !=='undefined' && success) { %>
                        <div class="alert alert-success">
                            <%= success %>
                        </div>
                        <% } %>

                            <% if (!isAdmin) { %>
                                <div class="alert alert-warning">Anda tidak memiliki izin untuk menambah barang.</div>
                                <% } else { %>
                                    <form method="post" action="/barang/create">
                                        <div class="mb-3">
                                            <label class="form-label">Nama Barang</label>
                                            <input type="text" name="nama_barang" class="form-control" required>
                                        </div>
                                        <!-- sisa form tetap sama -->
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-success">Simpan</button>
                                            <a href="/barang/list-barang" class="btn btn-secondary">Batal</a>
                                        </div>
                                    </form>
                                    <% } %>
        </div>

        <%- include('../../partials/footer.ejs') %>