            <div class="sidebar-menu-item">
                <button onclick="toggleSubmenu('layanan')">
                    <span>üìã Layanan Desa</span>
                    <span class="chevron" id="chevron-layanan">‚ñº</span>
                </button>
                <div class="sidebar-submenu" id="submenu-layanan">
                    <a href="/admin/layanan">Daftar Layanan</a>
                    <a href="/admin/layanan/surat">Surat Menyurat</a>
                    <a href="/admin/layanan/permohonan">Permohonan</a>
                </div>
            </div>

            <!-- Pengumuman -->
            <div class="sidebar-menu-item">
                <button onclick="toggleSubmenu('pengumuman')">
                    <span>üì¢ Pengumuman</span>
                    <span class="chevron" id="chevron-pengumuman">‚ñº</span>
                </button>
                <div class="sidebar-submenu" id="submenu-pengumuman">
                    <a href="/admin/pengumuman">Daftar Pengumuman</a>
                    <a href="/admin/pengumuman/create">Buat Pengumuman</a>
                    <a href="/admin/pengumuman/kategori">Kategori</a>
                </div>
