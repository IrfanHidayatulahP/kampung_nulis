            <!-- Keuangan -->
            <div class="sidebar-menu-item">
                <button onclick="toggleSubmenu('keuangan')">
                    <span>üí∞ Keuangan Desa</span>
                    <span class="chevron" id="chevron-keuangan">‚ñº</span>
                </button>
                <div class="sidebar-submenu" id="submenu-keuangan">
                    <a href="/admin/keuangan">Dashboard Keuangan</a>
                    <a href="/admin/keuangan/pemasukan">Pemasukan</a>
                    <a href="/admin/keuangan/pengeluaran">Pengeluaran</a>
