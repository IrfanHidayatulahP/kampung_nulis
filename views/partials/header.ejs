            <!-- Pengaturan -->
            <div class="sidebar-menu-item">
                <a href="/admin/settings">
                    <span>‚öôÔ∏è Pengaturan</span>
                </a>
            </div>
        </nav>
    </aside>

    <!-- Overlay -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Top Header -->
    <header class="appbar">
        <div style="display:flex;align-items:center;gap:16px;">
            <button class="sidebar-toggle" onclick="toggleSidebar()">
                <span>‚ò∞</span>
                <span>Menu</span>
            </button>

            <div class="brand">
                <div class="logo">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M12 3L2 9v11h20V9L12 3zm0 2.2L19 9v9h-5v-6h-4v6H5V9l7-3.8zM14 18v-4h-4v4h4z" />
                    </svg>
                </div>
                <div class="brand-text">
                    <div class="title">
                        <%= (typeof title !=='undefined' && title) ? title : 'Portal Kampung Nulis' %>
                    </div>
                    <div class="subtitle">Sistem Informasi Desa Digital</div>
                </div>
            </div>
        </div>

        <!-- right actions -->
        <div class="right-actions">
            <% if (typeof user !=='undefined' && user) { %>
                <div class="user-greeting">Halo, <strong>
                        <%= user.nama_lengkap || user.username %>
                    </strong></div>
                <a href="/profile" class="btn-ghost">Profil</a>
                <a href="/logout" class="btn btn-logout">Keluar</a>
                <% } else { %>
                    <a href="/login" class="btn-ghost">Masuk</a>
                    <a href="/register" class="btn">Daftar</a>
                    <% } %>
        </div>
    </header>

    <!-- page body - container start -->
    <div class="container page-content">

        <script>
            // Toggle sidebar
            function toggleSidebar() {
                document.body.classList.toggle('sidebar-open');
                // Save state to localStorage
                const isOpen = document.body.classList.contains('sidebar-open');
                localStorage.setItem('sidebarOpen', isOpen);
            }

            // Toggle submenu
            function toggleSubmenu(menuId) {
                const submenu = document.getElementById('submenu-' + menuId);
                const chevron = document.getElementById('chevron-' + menuId);

                submenu.classList.toggle('open');
                chevron.classList.toggle('open');

                // Save state
                const isOpen = submenu.classList.contains('open');
                localStorage.setItem('submenu-' + menuId, isOpen);
            }

            // Restore sidebar state on page load
            window.addEventListener('DOMContentLoaded', function () {
                // Restore sidebar open/close state
                const sidebarOpen = localStorage.getItem('sidebarOpen') === 'true';
                if (sidebarOpen) {
                    document.body.classList.add('sidebar-open');
                }

                // Restore submenu states
                ['warga', 'layanan', 'pengumuman', 'keuangan'].forEach(function (menuId) {
                    const submenuOpen = localStorage.getItem('submenu-' + menuId) === 'true';
                    if (submenuOpen) {
                        const submenu = document.getElementById('submenu-' + menuId);
                        const chevron = document.getElementById('chevron-' + menuId);
                        if (submenu && chevron) {
                            submenu.classList.add('open');
                            chevron.classList.add('open');
                        }
                    }
                });

                // Auto-open submenu based on current path
                const currentPath = '<%= (typeof currentPath !== "undefined" && currentPath) ? currentPath : "" %>';
                if (currentPath) {
                    if (currentPath.startsWith('/admin/warga')) {
                        document.getElementById('submenu-warga').classList.add('open');
                        document.getElementById('chevron-warga').classList.add('open');
                    } else if (currentPath.startsWith('/admin/layanan')) {
                        document.getElementById('submenu-layanan').classList.add('open');
                        document.getElementById('chevron-layanan').classList.add('open');
                    } else if (currentPath.startsWith('/admin/pengumuman')) {
                        document.getElementById('submenu-pengumuman').classList.add('open');
                        document.getElementById('chevron-pengumuman').classList.add('open');
                    } else if (currentPath.startsWith('/admin/keuangan')) {
                        document.getElementById('submenu-keuangan').classList.add('open');
                        document.getElementById('chevron-keuangan').classList.add('open');
                    }
                }
            });
        </script>