<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <title>
        <%= (typeof title !=='undefined' && title) ? title : 'Portal Kampung Nulis' %>
    </title>

    <style>
        :root {
            --primary: #1e3c72;
            --primary-dark: #2a5298;
            --primary-light: #7e8ba3;
            --bg: #f1f5f9;
            --card: #ffffff;
            --muted: #64748b;
            --accent: #2a5298;
            --danger: #dc2626;
            --success: #16a34a;
            --radius: 12px;
            --nav-height: 70px;
            --sidebar-width: 280px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg);
            color: #1e293b;
            padding-left: 0;
            transition: padding-left 0.3s ease;
        }

        body.sidebar-open {
            padding-left: var(--sidebar-width);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .appbar {
            height: var(--nav-height);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            padding: 0 20px;
            box-shadow: 0 4px 12px rgba(30, 60, 114, 0.15);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            transition: left 0.3s ease;
        }

        body.sidebar-open .appbar {
            left: var(--sidebar-width);
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 14px;
        }

        .logo {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            background: white;
            color: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .brand-text {
            color: white;
        }

        .brand .title {
            font-weight: 700;
            font-size: 18px;
            line-height: 1.2;
        }

        .brand .subtitle {
            font-size: 12px;
            opacity: 0.9;
            margin-top: 2px;
        }

        .right-actions {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-greeting {
            color: white;
            font-size: 14px;
        }

        .user-greeting strong {
            font-weight: 600;
        }

        .user-status {
            display: inline-block;
            padding: 4px 12px;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-left: 8px;
        }

        .btn {
            display: inline-block;
            padding: 10px 18px;
            border-radius: 10px;
            background: white;
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .btn-ghost {
            padding: 10px 16px;
            border-radius: 10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            background: transparent;
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .btn-ghost:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
        }

        .btn-logout {
            background: var(--danger);
            color: white;
        }

        .btn-logout:hover {
            background: #b91c1c;
        }

        .sidebar {
            position: fixed;
            left: calc(-1 * var(--sidebar-width));
            top: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: white;
            box-shadow: 4px 0 16px rgba(30, 60, 114, 0.1);
            transition: left 0.3s ease;
            z-index: 200;
            overflow-y: auto;
        }

        body.sidebar-open .sidebar {
            left: 0;
        }

        .sidebar-header {
            padding: 20px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: white;
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sidebar-logo {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            background: white;
            color: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 18px;
        }

        .sidebar-brand-text .title {
            font-weight: 700;
            font-size: 16px;
        }

        .sidebar-brand-text .subtitle {
            font-size: 12px;
            opacity: 0.9;
            margin-top: 2px;
        }

        .sidebar-close {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: white;
            padding: 6px 12px;
            border-radius: 8px;
            transition: all 0.2s;
            line-height: 1;
        }

        .sidebar-close:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        .sidebar-menu {
            padding: 20px 0;
        }

        .sidebar-menu-item {
            margin: 4px 16px;
        }

        .sidebar-menu-item>a,
        .sidebar-menu-item>button {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            padding: 14px 16px;
            border-radius: 10px;
            color: #475569;
            text-decoration: none;
            font-weight: 600;
            background: transparent;
            border: none;
            cursor: pointer;
            text-align: left;
            transition: all 0.2s;
            font-size: 15px;
        }

        .sidebar-menu-item>a:hover,
        .sidebar-menu-item>button:hover {
            background: #f1f5f9;
            color: var(--primary);
        }

        .sidebar-menu-item>a.active {
            background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
            color: var(--primary);
        }

        .sidebar-submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            margin-top: 4px;
        }

        .sidebar-submenu.open {
            max-height: 500px;
        }

        .sidebar-submenu a {
            display: block;
            padding: 12px 16px 12px 52px;
            color: #64748b;
            text-decoration: none;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.2s;
            position: relative;
        }

        .sidebar-submenu a::before {
            content: '‚Ä∫';
            position: absolute;
            left: 32px;
            font-size: 18px;
            font-weight: bold;
        }

        .sidebar-submenu a:hover {
            background: #f1f5f9;
            color: var(--primary);
            padding-left: 56px;
        }

        .chevron {
            transition: transform 0.3s ease;
            font-size: 12px;
        }

        .chevron.open {
            transform: rotate(180deg);
        }

        .sidebar-toggle {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 10px 16px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .sidebar-toggle:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
        }

        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 150;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        body.sidebar-open .sidebar-overlay {
            opacity: 1;
            visibility: visible;
        }

        .page-content {
            padding-top: calc(var(--nav-height) + 24px);
        }

        .card {
            background: white;
            border-radius: var(--radius);
            padding: 24px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 20px;
        }

        .small {
            font-size: 14px;
            color: var(--muted);
        }

        .muted {
            color: var(--muted);
        }

        @media (max-width: 768px) {
            body.sidebar-open {
                padding-left: 0;
            }

            body.sidebar-open .appbar {
                left: 0;
            }

            .brand .subtitle,
            .user-greeting {
                display: none;
            }

            .appbar {
                padding: 0 12px;
            }

            .container {
                padding: 0 16px;
            }
        }

        @media (max-width: 480px) {
            .brand .title {
                font-size: 16px;
            }

            .logo {
                width: 40px;
                height: 40px;
                font-size: 16px;
            }

            .btn,
            .btn-ghost {
                padding: 8px 12px;
                font-size: 13px;
            }
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <div class="sidebar-logo">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 3L2 9v11h20V9L12 3zm0 2.2L19 9v9h-5v-6h-4v6H5V9l7-3.8zM14 18v-4h-4v4h4z" />
                    </svg>
                </div>
                <div class="sidebar-brand-text">
                    <div class="title">Jasa Sewa Barang</div>
                    <div class="subtitle">Kampung Nulis</div>
                </div>
            </div>
            <button class="sidebar-close" onclick="toggleSidebar()" aria-label="Close sidebar">√ó</button>
        </div>

        <nav class="sidebar-menu">
            <!-- Dashboard (Untuk semua user) -->
            <% // fallback jika user tidak tersedia -> arahkan ke /login
                let dashboardRoute = '/login';
                if (typeof user !== 'undefined' && user) {
                if (user.status === 'Admin') {
                dashboardRoute = '/admin/dashboard_admin';
                } else if (user.status === 'Anggota') {
                dashboardRoute = '/anggota/dashboard_anggota';
                } else if (user.status === 'Non-Anggota') {
                dashboardRoute = '/nonanggota/dashboard_nonanggota';
                }
                }
                %>

                <div class="sidebar-menu-item">
                    <a href="<%= dashboardRoute %>">
                        <span>üè† Dashboard</span>
                    </a>
                </div>


                <!-- Menu untuk ADMIN -->
                <% if (typeof user !=='undefined' && user && user.status==='Admin' ) { %>
                    <!-- Manajemen Peminjam -->
                    <div class="sidebar-menu-item">
                        <button onclick="toggleSubmenu('peminjam')" aria-expanded="false"
                            aria-controls="submenu-peminjam">
                            <span>üë• Manajemen Peminjam</span>
                            <span class="chevron" id="chevron-peminjam">‚ñº</span>
                        </button>
                        <div class="sidebar-submenu" id="submenu-peminjam">
                            <a href="/peminjam/list-peminjam">Daftar Peminjam</a>
                        </div>
                    </div>

                    <!-- Barang Sewaan -->
                    <div class="sidebar-menu-item">
                        <button onclick="toggleSubmenu('barang')" aria-expanded="false" aria-controls="submenu-barang">
                            <span>üìã Barang Sewaan</span>
                            <span class="chevron" id="chevron-barang">‚ñº</span>
                        </button>
                        <div class="sidebar-submenu" id="submenu-barang">
                            <a href="/barang/list-barang">List Barang</a>
                        </div>
                    </div>

                    <!-- Transaksi Sewa -->
                    <div class="sidebar-menu-item">
                        <button onclick="toggleSubmenu('transaksi-sewa')" aria-expanded="false"
                            aria-controls="submenu-transaksi-sewa">
                            <span>üì¢ Transaksi Sewa</span>
                            <span class="chevron" id="chevron-transaksi-sewa">‚ñº</span>
                        </button>
                        <div class="sidebar-submenu" id="submenu-transaksi-sewa">
                            <a href="/transaksi/list-transaksi">Daftar Transaksi</a>
                        </div>
                    </div>

                    <% } %>

                        <!-- Menu untuk ANGGOTA -->
                        <% if (typeof user !=='undefined' && user && user.status==='Anggota' ) { %>
                            <!-- Profil Saya -->
                            <div class="sidebar-menu-item">
                                <a href="/profile">
                                    <span>üë§ Profil Saya</span>
                                </a>
                            </div>
                            <% } %>

                                <!-- Menu untuk NON-ANGGOTA -->
                                <% if (typeof user !=='undefined' && user && (user.status==='Non-Anggota' ||
                                    user.status==='Nonanggota' || user.status==='Non Anggota' )) { %>
                                    <div class="sidebar-menu-item">
                                        <a href="/barang/list-barang">
                                            <span>üìã Daftar Barang</span>
                                        </a>
                                    </div>

                                    <!-- Jika non-anggota boleh buat sewa, tampilkan; jika tidak, hapus atau ubah -->
                                    <div class="sidebar-menu-item">
                                        <a href="/sewa/create">
                                            <span>üõí Sewa Barang</span>
                                        </a>
                                    </div>

                                    <div class="sidebar-menu-item">
                                        <a href="/sewa/list-sewa">
                                            <span>üì¢ Riwayat Transaksi</span>
                                        </a>
                                    </div>

                                    <div class="sidebar-menu-item">
                                        <a href="/membership/info">
                                            <span>‚ÑπÔ∏è Info Keanggotaan</span>
                                        </a>
                                    </div>

                                    <div class="sidebar-menu-item">
                                        <a href="/profile">
                                            <span>üë§ Profil</span>
                                        </a>
                                    </div>
                                    <% } %>
        </nav>
    </aside>

    <!-- Overlay -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Top Header -->
    <header class="appbar">
        <div style="display:flex;align-items:center;gap:16px;">
            <button class="sidebar-toggle" onclick="toggleSidebar()">
                <span>‚ò∞</span>
                <span>Menu</span>
            </button>

            <div class="brand">
                <div class="logo">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 3L2 9v11h20V9L12 3zm0 2.2L19 9v9h-5v-6h-4v6H5V9l7-3.8zM14 18v-4h-4v4h4z" />
                    </svg>
                </div>
                <div class="brand-text">
                    <div class="title">
                        <%= (typeof title !=='undefined' && title) ? title : 'Jasa Sewa Barang' %>
                    </div>
                    <div class="subtitle">Kampung Nulis</div>
                </div>
            </div>
        </div>

        <!-- right actions -->
        <div class="right-actions">
            <% if (typeof user !=='undefined' && user) { %>
                <div class="user-greeting">
                    Halo, <strong>
                        <%= user.nama_lengkap || user.username %>
                    </strong>
                    <span class="user-status">
                        <%= user.status %>
                    </span>
                </div>
                <a href="/profile" class="btn-ghost">Profil</a>
                <a href="/logout" class="btn btn-logout">Keluar</a>
                <% } else { %>
                    <a href="/login" class="btn-ghost">Masuk</a>
                    <a href="/register" class="btn">Daftar</a>
                    <% } %>
        </div>
    </header>

    <!-- page body - container start -->
    <div class="container page-content">

        <script>
            function toggleSidebar() {
                document.body.classList.toggle('sidebar-open');
                const isOpen = document.body.classList.contains('sidebar-open');
                localStorage.setItem('sidebarOpen', isOpen);
            }

            function toggleSubmenu(menuId) {
                const submenu = document.getElementById('submenu-' + menuId);
                const chevron = document.getElementById('chevron-' + menuId);
                const toggleButton = document.querySelector('[aria-controls="submenu-' + menuId + '"]');

                if (!submenu || !chevron) return;

                if (submenu.hasAttribute('hidden')) submenu.removeAttribute('hidden');

                submenu.classList.toggle('open');
                chevron.classList.toggle('open');

                const isOpen = submenu.classList.contains('open');
                if (toggleButton) toggleButton.setAttribute('aria-expanded', isOpen);
                localStorage.setItem('submenu-' + menuId, isOpen);
            }

            window.addEventListener('DOMContentLoaded', function () {
                const sidebarOpen = localStorage.getItem('sidebarOpen') === 'true';
                if (sidebarOpen) document.body.classList.add('sidebar-open');

                // Restore submenu states
                ['peminjam', 'barang', 'transaksi-sewa', 'detail-transaksi', 'transaksi-saya'].forEach(function (menuId) {
                    const submenuOpen = localStorage.getItem('submenu-' + menuId) === 'true';
                    const submenu = document.getElementById('submenu-' + menuId);
                    const chevron = document.getElementById('chevron-' + menuId);
                    const toggleButton = document.querySelector('[aria-controls="submenu-' + menuId + '"]');

                    if (submenu && chevron && submenuOpen) {
                        if (submenu.hasAttribute('hidden')) submenu.removeAttribute('hidden');
                        submenu.classList.add('open');
                        chevron.classList.add('open');
                        if (toggleButton) toggleButton.setAttribute('aria-expanded', 'true');
                    }
                });
            });
        </script>